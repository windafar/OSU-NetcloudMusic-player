<Window x:Class="PlayProjectGame.ArtsSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlayProjectGame"
        mc:Ignorable="d"
         Height="270.1" Width="450"
         Topmost="True" Title="选择一个要查看的艺术家"
        >
    <Grid>
        <ListBox x:Name="ArtsSelectListBox" Loaded="ArtsSelectListBox_Loaded">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="18" Cursor="Hand" MouseDown="ArtTextBlockMouseDown" Text="{Binding ArtName}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            
        </ListBox>    </Grid>
</Window>
